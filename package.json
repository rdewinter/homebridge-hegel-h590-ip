{
  "name": "homebridge-hegel-h590-ip",
  "version": "1.0.1",
  "description": "Homebridge plugin to control Hegel H590 via IP (power + OPTICAL3/USB input only)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": "Robin de Winter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdewinter/homebridge-hegel-h590-ip.git"
  },
  "homebridge": {
    "platforms": [
      {
        "platform": "HegelH590IP",
        "name": "Hegel H590",
        "host": "192.168.1.100",
        "port": 50001,
        "debug": true,
        "powerOnCommand": "-p.1",
        "powerOffCommand": "-p.0",
        "inputOptical3Command": "-i.10",
        "inputUsbCommand": "-i.11",
      }
    ]
  },
  "scripts": {
    "build": "npx tsc -p tsconfig.json",
    "watch": "npx tsc -w -p tsconfig.json"
  },
  "keywords": [
    "homebridge-plugin",
    "homebrige",
    "homekit",
    "hegel",
    "h590"
  ],
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.6.0"
  },
    "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "homebridge": "^1.8.0",
    "typescript": "^5.9.3"
  }
}
